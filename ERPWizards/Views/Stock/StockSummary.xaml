<Page
    x:Class="ERPWizards.Views.Stock.StockSummary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ERPWizards.Views.Stock"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StockSummary"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#F3F4F6"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="15,0,0,0"
            HorizontalAlignment="Left"
            FontSize="15"
            FontWeight="Bold"
            Foreground="#2B579A"
            Text="Stock Summary" />
        <DatePicker
            Width="150"
            Margin="0,0,15,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center" />

        <DataGrid
            x:Name="StockSummaryGrid"
            Grid.Row="1"
            Margin="0,20,0,77"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding ItemId}"
                    Header="S/L" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Name}"
                    Header="Name" />

                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding ItemCode}"
                    Header="Code" />

                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Group}"
                    Header="Group" />


                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UOM}"
                    Header="UOM" />

                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding PartNo}"
                    Header="Part No" />



                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Quantity}"
                    Header="Quantity" />

                <DataGridTextColumn Width="200" Header=" Amount " />

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
