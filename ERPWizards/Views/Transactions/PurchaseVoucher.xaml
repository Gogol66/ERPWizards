<Page
    x:Class="ERPWizards.Views.Transactions.PurchaseVoucher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ERPWizards.Views.Transactions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PurchaseVoucher"
    d:DesignHeight="800"
    d:DesignWidth="800"
    Background="#F3F4F6"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="15,0,0,0"
            HorizontalAlignment="Left"
            FontSize="15"
            FontWeight="Bold"
            Foreground="#2B579A"
            Text="Purchase" />

        <!--  Main Content  -->
        <Grid Grid.Row="1" Margin="10">

            <!--  Voucher No  -->
            <TextBlock
                Margin="20,11,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Vch No" />
            <TextBox
                x:Name="VoucherSequenceNo"
                Width="200"
                Margin="85,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsReadOnly="True" />

            <!--  Voucher Date  -->
            <TextBlock
                Margin="580,11,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Vch Date" />
            <DatePicker
                x:Name="VoucherDate"
                Width="120"
                Margin="640,9,20,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />

            <!--  Reference No  -->
            <TextBlock
                Margin="18,35,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Reference" />
            <TextBox
                Width="120"
                Margin="85,35,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />

            <!--  Reference Date  -->
            <TextBlock
                Margin="210,36,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Ref Date" />
            <DatePicker
                Width="120"
                Margin="267,36,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />

            <!--  Party A/C Name  -->
            <TextBlock
                Margin="20,69,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Party A/C Name" />
            <ComboBox
                x:Name="PartyDebtors"
                Width="400"
                Height="25"
                Margin="119,66,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />

            <!--  Name Field with Autocomplete  -->
            <TextBlock
                Margin="20,100,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Name" />
            <ComboBox
                x:Name="NameComboBox"
                Width="400"
                Height="25"
                Margin="119,100,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsEditable="True"
                ItemsSource="{Binding FilteredNames}"
                PreviewKeyDown="NameComboBox_PreviewKeyDown" />

            <!--  DataGrid for list of items  -->
            <DataGrid
                x:Name="PurchaseGrid"
                Width="1100"
                Height="325"
                Margin="20,150,200,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="30"
                        Binding="{Binding SL}"
                        Header="S/L" />
                    <DataGridTextColumn
                        Width="600"
                        Binding="{Binding Item}"
                        Header="Name of Item" />
                    <DataGridTextColumn
                        Width="60"
                        Binding="{Binding Quantity}"
                        Header="Qty" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Rate}"
                        Header="Rate" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Discount}"
                        Header="Discount %" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Amount}"
                        Header="Amount" />
                </DataGrid.Columns>
            </DataGrid>

            <!--  DataGrid for bill sundries  -->
            <DataGrid
                x:Name="BillSundryGrid"
                Width="500"
                Height="200"
                Margin="20,500,300,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="30"
                        Binding="{Binding SL}"
                        Header="S/L" />
                    <DataGridTextColumn
                        Width="300"
                        Binding="{Binding Ledger}"
                        Header="Bill Ledger" />
                    <DataGridTextColumn
                        Width="60"
                        Binding="{Binding Percent}"
                        Header="%" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Amount}"
                        Header="Amount" />
                </DataGrid.Columns>
            </DataGrid>

            <!--  Save and Cancel Buttons  -->
            <Button
                Width="110"
                Margin="250,716,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="SAVE" />
            <Button
                Width="110"
                Margin="500,716,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="CANCEL" />

        </Grid>
    </Grid>
</Page>
