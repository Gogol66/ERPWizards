<Window
    x:Class="ERPWizards.Views.CreateorUpdateCompany"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:local="clr-namespace:ERPWizards.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Company Details"
    MinWidth="1280"
    MinHeight="720"
    Background="#F4F6F9"
    Closed="Window_Closed"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <!--  Main Layout Grid  -->

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Title  -->
            <RowDefinition Height="*" />
            <!--  Content  -->
            <RowDefinition Height="Auto" />
            <!--  Submit Button  -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!--  Left Panel  -->
            <ColumnDefinition Width="*" />
            <!--  Right Panel  -->
        </Grid.ColumnDefinitions>

        <!--  Title  -->

        <TextBlock
            Grid.Row="0"
            Margin="15,0,0,0"
            HorizontalAlignment="Left"
            FontSize="25"
            FontWeight="Bold"
            Foreground="#2B579A"
            Text="Create Company" />


        <!--  Left Panel: Company Details  -->
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="10">

            <GroupBox>
                <GroupBox.Header>Company Information</GroupBox.Header>
                <StackPanel>

                    <!--  Company ID @this field not requred in frontend  -->

                    <Grid Margin="1,10,10,0">

                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Enter the Id:" />

                        <TextBox
                            x:Name="IdTextBox"
                            Height="25"
                            Margin="129,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0"
                            IsReadOnly="True" />


                    </Grid>
                    <!--  Company Name  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Company Name " />

                        <TextBox
                            x:Name="NameTextBox"
                            Height="25"
                            Margin="129,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Malling Name  -->

                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Mailing Name" />
                        <TextBox
                            x:Name="MailingNameTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Code @@this field not requred in frontend & this code auto generate from backed  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Code" />
                        <TextBox
                            x:Name="CodeTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Address  -->

                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Address" />
                        <TextBox
                            x:Name="AddressTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Pincode  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Pincode" />
                        <TextBox
                            x:Name="PinCodeTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  State  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="State" />

                        <ComboBox
                            x:Name="StateComboBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Country  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Country" />
                        <ComboBox
                            x:Name="CountryComboBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>



                    <!--  Contact No  -->

                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Contact No" />

                        <TextBox
                            x:Name="TelephoneTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>


                    <!--  E-Mail  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="E-Mail" />
                        <TextBox
                            x:Name="EmailTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Website  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Website:" />
                        <TextBox
                            x:Name="WebsiteTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>
                    <!--  Base Currency  -->
                    <Grid Margin="1,10,10,0">

                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Base Currency" />

                        <TextBox
                            x:Name="CurrencyTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>



                </StackPanel>
            </GroupBox>


        </Grid>

        <!--  Right Panel: Additional Details  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="10">


            <GroupBox>
                <GroupBox.Header>
                    Tax &amp; Incorporation Information
                </GroupBox.Header>

                <StackPanel>
                    <!--  CIN  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Company CIN" />

                        <TextBox
                            x:Name="CompanyCINTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Udyam  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="UDYAM No" />

                        <TextBox
                            x:Name="CompanyUdyamTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>


                    <!--  Comapny Pan  -->
                    <Grid Margin="1,10,10,0">

                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Company PAN" />

                        <TextBox
                            x:Name="CompanyPanTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  TAN  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="90"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="#666666"
                            Text="Company TAN" />

                        <TextBox
                            x:Name="CompanyTANTextBox"
                            Height="25"
                            Margin="128,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <GroupBox Margin="1,10,10,0">
                        <GroupBox.Header>GST Information</GroupBox.Header>
                        <StackPanel>
                            <!--  GSTIN  -->
                            <Grid Margin="1,10,10,0">
                                <TextBlock
                                    Width="90"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="#666666"
                                    Text="GSTIN" />

                                <TextBox
                                    x:Name="CompanyGstTextBox"
                                    Height="25"
                                    Margin="128,0,0,0"
                                    Background="#FAFAFA"
                                    BorderBrush="#C0C0C0" />
                            </Grid>

                            <!--  GST Registration Type  -->
                            <Grid Margin="1,10,10,0">
                                <TextBlock
                                    Width="90"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="#666666"
                                    Text="Registration Type" />

                                <TextBox
                                    x:Name="GstRegistrationTypeTextBox"
                                    Height="25"
                                    Margin="128,0,0,0"
                                    Background="#FAFAFA"
                                    BorderBrush="#C0C0C0" />
                            </Grid>


                            <!--  GST Periodicity of GSTR-1  -->
                            <Grid Margin="1,10,10,0">
                                <TextBlock
                                    Width="90"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="#666666"
                                    Text="Periodicity of GSTR-1" />

                                <TextBox
                                    x:Name="GstPeriodicityTextBox"
                                    Height="25"
                                    Margin="128,0,0,0"
                                    Background="#FAFAFA"
                                    BorderBrush="#C0C0C0" />
                            </Grid>




                        </StackPanel>
                    </GroupBox>

                    <GroupBox>
                        <GroupBox.Header>Financial Information</GroupBox.Header>
                        <StackPanel>

                            <Grid Margin="1,10,10,0">
                                <TextBlock
                                    Width="170"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="#666666"
                                    Text="Financial Year Beginning From" />
                                <DatePicker
                                    x:Name="FinancialYearDatePicker"
                                    Height="25"
                                    Margin="180,0,0,0"
                                    Background="#FAFAFA"
                                    BorderBrush="#C0C0C0" />
                            </Grid>

                            <!--  dsa  -->

                            <Grid Margin="1,10,10,0">
                                <TextBlock
                                    Width="170"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="#666666"
                                    Text="Book Beginning From" />
                                <DatePicker
                                    x:Name="BookBeginningDatePicker"
                                    Height="25"
                                    Margin="180,0,0,0"
                                    Background="#FAFAFA"
                                    BorderBrush="#C0C0C0" />
                            </Grid>

                        </StackPanel>
                    </GroupBox>




                </StackPanel>
            </GroupBox>
        </Grid>

        <!--  Submit Button  -->
        <Button
            x:Name="SubmitButton"
            Grid.Row="2"
            Grid.Column="1"
            Width="120"
            Height="40"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Background="#2B579A"
            BorderBrush="Transparent"
            Click="SubmitButton_Click"
            Content="Submit"
            FontWeight="Bold"
            Foreground="White" />
    </Grid>
</Window>