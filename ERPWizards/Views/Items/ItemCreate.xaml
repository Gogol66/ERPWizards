<Page
    x:Class="ERPWizards.Views.Items.ItemCreate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ItemCreate"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#F3F4F6"
    mc:Ignorable="d">

    <!--  Add ScrollViewer for scrollable content  -->
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Page Title  -->
            <TextBlock
                Grid.Row="0"
                Margin="15,0,0,0"
                HorizontalAlignment="Left"
                FontSize="15"
                FontWeight="Bold"
                Foreground="#2B579A"
                Text="Create Item" />

            <!--  Main Input Controls  -->
            <Grid Grid.Row="1" Margin="10">
                <GroupBox>
                    <GroupBox.Header>Item Information</GroupBox.Header>
                    <StackPanel Margin="0,0,200,0">

                        <!--  Name  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="Name" />
                            <TextBox
                                x:Name="NameTextBox"
                                Height="25"
                                Margin="170,0,0,0"
                                Background="#FAFAFA"
                                BorderBrush="#C0C0C0" />
                        </Grid>

                        <!--  Item Code  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="Item Code" />
                            <TextBox
                                x:Name="ItemCodeTextBox"
                                Height="25"
                                Margin="170,0,0,0"
                                Background="#FAFAFA"
                                BorderBrush="#C0C0C0" />
                        </Grid>

                        <!--  Group  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="Group" />
                            <TextBox
                                x:Name="GroupTextBox"
                                Height="25"
                                Margin="170,0,0,0"
                                Background="#FAFAFA"
                                BorderBrush="#C0C0C0" />
                        </Grid>

                        <!--  Unit  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="Unit" />
                            <ComboBox
                                x:Name="UnitsComboBox"
                                Height="25"
                                Margin="170,0,0,0"
                                Background="#FAFAFA"
                                BorderBrush="#C0C0C0" />
                        </Grid>

                        <!--  GST Applicability  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="GST Applicability" />
                            <ComboBox
                                x:Name="GstApplicabilityComboBox"
                                Height="25"
                                Margin="170,0,0,0"
                                Background="#FAFAFA"
                                BorderBrush="#C0C0C0" />
                        </Grid>

                        <!--  HSN Code  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="HSN Code" />
                            <TextBox
                                x:Name="HsnCodeTextBox"
                                Height="25"
                                Margin="170,0,0,0"
                                Background="#FAFAFA"
                                BorderBrush="#C0C0C0" />
                        </Grid>

                        <!--  Tax Information  -->
                        <GroupBox>
                            <GroupBox.Header>Tax Information</GroupBox.Header>
                            <StackPanel>
                                <!--  IGST  -->
                                <Grid Margin="1,10,10,0">
                                    <TextBlock
                                        Width="150"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="#666666"
                                        Text="IGST (%)" />
                                    <TextBox
                                        x:Name="IgstTextBox"
                                        Height="25"
                                        Margin="170,0,0,0"
                                        Background="#FAFAFA"
                                        BorderBrush="#C0C0C0" />
                                </Grid>

                                <!--  CGST  -->
                                <Grid Margin="1,10,10,0">
                                    <TextBlock
                                        Width="150"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="#666666"
                                        Text="CGST (%)" />
                                    <TextBox
                                        x:Name="CgstTextBox"
                                        Height="25"
                                        Margin="170,0,0,0"
                                        Background="#FAFAFA"
                                        BorderBrush="#C0C0C0" />
                                </Grid>

                                <!--  SGST  -->
                                <Grid Margin="1,10,10,0">
                                    <TextBlock
                                        Width="150"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="#666666"
                                        Text="SGST (%)" />
                                    <TextBox
                                        x:Name="SgstTextBox"
                                        Height="25"
                                        Margin="170,0,0,0"
                                        Background="#FAFAFA"
                                        BorderBrush="#C0C0C0" />
                                </Grid>

                                <!--  Cess Rate  -->
                                <Grid Margin="1,10,10,0">
                                    <TextBlock
                                        Width="150"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="#666666"
                                        Text="Cess Rate (%)" />
                                    <TextBox
                                        x:Name="CessRateTextBox"
                                        Height="25"
                                        Margin="170,0,0,0"
                                        Background="#FAFAFA"
                                        BorderBrush="#C0C0C0" />
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!--  Reverse Charge  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="Reverse Charge Applicable" />
                            <CheckBox x:Name="ReverseChargeCheckBox" Margin="170,0,0,0" />
                        </Grid>

                        <!--  Tax Credit Eligibility  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="Eligible for Tax Credit" />
                            <CheckBox x:Name="TaxCreditCheckBox" Margin="170,0,0,0" />
                        </Grid>

                        <!--  Supplier ID  -->
                        <Grid Margin="1,10,10,0">
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#666666"
                                Text="Supplier ID" />
                            <TextBox
                                x:Name="SupplierIdTextBox"
                                Height="25"
                                Margin="170,0,0,0"
                                Background="#FAFAFA"
                                BorderBrush="#C0C0C0" />
                        </Grid>

                    </StackPanel>
                </GroupBox>
            </Grid>

            <!--  Save Button  -->
            <Button
                x:Name="SaveButton"
                Grid.Row="2"
                Width="120"
                Height="40"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Background="#2B579A"
                BorderBrush="Transparent"
                Click="SaveButton_Click"
                Content="SAVE"
                FontWeight="Bold"
                Foreground="White" />
        </Grid>
    </ScrollViewer>
</Page>
