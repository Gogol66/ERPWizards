<Page
    x:Class="ERPWizards.Views.Ledger"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ERPWizards.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Ledger View"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#F3F4F6"
    mc:Ignorable="d">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title Section  -->
        <TextBlock
            Grid.Row="0"
            Margin="15,0,0,10"
            HorizontalAlignment="Left"
            FontSize="15"
            FontWeight="Bold"
            Foreground="#2B579A"
            Text="Ledger View" />

        <!--  Content Section  -->
        <Grid Grid.Row="1" Margin="10">
            <GroupBox>
                <GroupBox.Header>Ledger Information</GroupBox.Header>
                <StackPanel Margin="10">
                    <!--  Ledger Name  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="120"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#666666"
                            Text="Ledger Name:" />
                        <TextBox
                            x:Name="LedgerNameTextBox"
                            Width="300"
                            Height="25"
                            Margin="10,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Description  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="120"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#666666"
                            Text="Description:" />
                        <TextBox
                            x:Name="DescriptionTextBox"
                            Width="300"
                            Height="25"
                            Margin="10,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Opening Balance  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="120"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#666666"
                            Text="Opening Balance:" />
                        <TextBox
                            x:Name="OpeningBalanceTextBox"
                            Width="300"
                            Height="25"
                            Margin="10,0,0,0"
                            Background="#FAFAFA"
                            BorderBrush="#C0C0C0" />
                    </Grid>

                    <!--  Created At  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="120"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#666666"
                            Text="Created At:" />
                        <DatePicker
                            x:Name="CreatedAtDatePicker"
                            Width="300"
                            Height="25"
                            Margin="10,0,0,0" />
                    </Grid>

                    <!--  Updated At  -->
                    <Grid Margin="1,10,10,0">
                        <TextBlock
                            Width="120"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#666666"
                            Text="Updated At:" />
                        <DatePicker
                            x:Name="UpdatedAtDatePicker"
                            Width="300"
                            Height="25"
                            Margin="10,0,0,0" />
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!--  Footer  -->
        <Button
            x:Name="SaveButton"
            Grid.Row="2"
            Width="120"
            Height="40"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Background="#2B579A"
            BorderBrush="Transparent"
            Content="SAVE"
            FontWeight="Bold"
            Foreground="White" />
    </Grid>
</Page>
